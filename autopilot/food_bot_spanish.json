{
  "friendlyName": "FoodNow Bot - Spanish",
  "logQueries": true,
  "uniqueName": "FoodNowSpanish",
  "defaults": {
    "defaults": {
      "assistant_initiation": "task://greeting",
      "fallback": "task://fallback",
      "collect": {
        "validate_on_failure": "task://error_condition"
      }
    }
  },
  "styleSheet": {
    "style_sheet": {
      "collect": {
        "validate": {
          "on_failure": {
            "repeat_question": false,
            "messages": [
              {
                "say": "No entendí eso. ¿Qué dijiste?"
              },
              {
                "say": "Todavía no entendí eso. Por favor repitelo."
              },
              {
                "say": "Probemos por última vez. Dilo otra vez porfavor."
              }
            ]
          },
          "on_success": {
            "say": ""
          },
          "max_attempts": 4
        }
      },
      "voice": {
        "say_voice": "Polly.Penelope"
      }
    }
  },
  "fieldTypes": [],
  "tasks": [
    {
      "uniqueName": "error_condition",
      "actions": {
        "actions": [
          {
            "say": "Parece que estoy teniendo problemas. Disculpas por eso. Comencemos de nuevo, ¿cómo puedo ayudarlo hoy?"
          },
          {
            "listen": true
          }
        ]
      },
      "fields": [],
      "samples": []
    },
    {
      "uniqueName": "fallback",
      "actions": {
        "actions": [
          {
            "say": "Lo siento, no entendí eso. Por favor, dilo de nuevo."
          },
          {
            "listen": true
          }
        ]
      },
      "fields": [],
      "samples": []
    },
    {
      "uniqueName": "goodbye",
      "actions": {
        "actions": [
          {
            "say": "¡Gracias! Comuníquese nuevamente si necesita algo. Adiós."
          }
        ]
      },
      "fields": [],
      "samples": [
        {
          "language": "en-US",
          "taggedText": "adiós"
        }
      ]
    },
    {
      "uniqueName": "need_food",
      "friendlyName": "Need Food Response",
      "fields": [],
      "samples": [
        {
          "language": "en-US",
          "taggedText": "necesito comida"
        }
      ],
      "actions": {
        "actions": [
          {
            "say": "Puedo ayudarte a encontrar comida\n."
          },
          {
            "collect": {
              "name": "user_location",
              "questions": [
                {
                  "question": "¿En qué ciudad vives?",
                  "name": "city",
                  "type": "Twilio.CITY"
                }
              ],
              "on_complete": {
                "redirect": "https://accfb-foodnow-stage.herokuapp.com/validate-city"
              }
            }
          }
        ]
      }
    },
    {
      "uniqueName": "collect_address",
      "actions": {
        "actions": [
          {
            "collect": {
              "name": "user_location",
              "questions": [
                {
                  "question": "cual es la direccion mas cercana?",
                  "name": "address"
                }
              ],
              "on_complete": {
                "redirect": "https://accfb-foodnow-stage.herokuapp.com/find-pantry"
              }
            }
          }
        ]
      },
      "fields": [],
      "samples": []
    },
    {
      "uniqueName": "greeting",
      "actions": {
        "actions": [
          {
            "say": "Bienvenido al servicio automatizado de asistencia alimentaria del Banco de Alimentos Comunitarios del Condado de Alameda. Este servicio puede ayudarlo a encontrar un sitio de distribución de alimentos cerca de usted dentro del condado de Alameda."
          },
          {
            "redirect": "task://need_food"
          }
        ]
      },
      "fields": [],
      "samples": [
        {
          "language": "en-US",
          "taggedText": "Hola"
        }
      ]
    }
  ],
  "modelBuild": {
    "uniqueName": "v0.1"
  }
}
